<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".activity.patient.medicalReport.MedicalReportFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="Medical Report" />

        <View
            android:layout_width="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/light_gray"
            android:layout_height="2dp" />
    </LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="7.5"
    android:orientation="vertical">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_medical_report"
        android:layout_width="match_parent"
        android:layout_weight="8.5"
        android:layout_margin="20dp"
        android:layout_height="0dp" />
</LinearLayout>
    <LinearLayout
        android:id="@+id/lln_add_medical_report_for_provider"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_weight="1.5"
        android:layout_height="0dp"
        android:gravity="bottom|end" >
        <ImageView
            android:id="@+id/img_Add_family_history"
            android:gravity="end"
            android:src="@drawable/add"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="50dp"
            android:layout_width="50dp"
            android:layout_height="50dp" />
    </LinearLayout>




</LinearLayout>