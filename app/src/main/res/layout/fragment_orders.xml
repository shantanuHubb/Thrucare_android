<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".activity.patient.order.OrdersFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_weight=".7"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="Orders" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/light_gray"
        android:layout_height="2dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:id="@+id/cd_medication_order"
                    android:layout_width="0dp"
                    app:cardCornerRadius="16dp"
                    android:layout_margin="5dp"
                    android:layout_height="170dp"
                    android:layout_weight=".5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:background="@drawable/medications"
                            android:layout_width="match_parent"
                            android:layout_height="130dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:background="@color/colorAccent"
                            android:text="Medication" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>



                <androidx.cardview.widget.CardView
                    android:id="@+id/cd_lab_order"
                    android:layout_width="0dp"
                    app:cardCornerRadius="16dp"
                    android:layout_margin="5dp"
                    android:layout_height="170dp"
                    android:layout_weight=".5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:background="@drawable/labimge"
                            android:layout_width="match_parent"
                            android:layout_height="130dp"></ImageView>

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:background="@color/colorAccent"
                            android:text="Labs"></TextView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:orientation="horizontal">


                <androidx.cardview.widget.CardView
                    android:id="@+id/cd_refferal_order"
                    android:layout_width="0dp"
                    app:cardCornerRadius="16dp"
                    android:layout_margin="5dp"
                    android:layout_height="170dp"
                    android:layout_weight=".5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:background="@drawable/medications"
                            android:layout_width="match_parent"
                            android:layout_height="130dp"></ImageView>

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:background="@color/colorAccent"
                            android:text="Referrals"></TextView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/cd_vision_order"
                    android:layout_width="0dp"
                    app:cardCornerRadius="16dp"
                    android:layout_margin="5dp"
                    android:layout_height="170dp"
                    android:layout_weight=".5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:background="@drawable/device"
                            android:layout_width="match_parent"
                            android:layout_height="130dp"></ImageView>

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:background="@color/colorAccent"
                            android:text="Vision"></TextView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>



            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:orientation="horizontal">


                <androidx.cardview.widget.CardView
                    android:id="@+id/cd_radiology_order"
                    android:layout_width="0dp"
                    app:cardCornerRadius="16dp"
                    android:layout_margin="5dp"
                    android:layout_height="170dp"
                    android:layout_weight=".5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:background="@drawable/radiology"
                            android:layout_width="match_parent"
                            android:layout_height="130dp"></ImageView>

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:background="@color/colorAccent"
                            android:text="Radiology"></TextView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/cd_device_order"
                    android:layout_width="0dp"
                    app:cardCornerRadius="16dp"
                    android:layout_margin="5dp"
                    android:layout_height="170dp"
                    android:layout_weight=".5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:background="@drawable/device"
                            android:layout_width="match_parent"
                            android:layout_height="130dp"></ImageView>

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:background="@color/colorAccent"
                            android:text="Device"></TextView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>