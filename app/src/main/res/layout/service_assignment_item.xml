<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/lln_patient_appoint_card"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="135dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">



                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:gravity="start"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".8">

                    <TextView
                        android:id="@+id/tv_location_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location"
                        android:textSize="15sp"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_service_type_service_assignment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Service Type"
                        android:textSize="13sp" />
                    <TextView
                        android:id="@+id/tv_date_time_service_assignment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2.35PM, Friday"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_speciality_service_assignment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Speciality"
                        android:textSize="13sp" />
                </LinearLayout>



                <LinearLayout
                    android:id="@+id/lln_select_service_assignment"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_marginTop="15dp"
                    android:layout_height="30dp"
                    android:layout_weight=".2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/active_text_shape"
                        android:text="Select"
                        android:layout_marginStart="10dp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>