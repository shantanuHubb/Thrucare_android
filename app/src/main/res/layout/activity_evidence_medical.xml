<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.provider.EvidenceMedicalActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_weight=".7"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="@string/medical_report" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/light_gray"
        android:layout_height="2dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:orientation="horizontal">


            <androidx.cardview.widget.CardView
                android:id="@+id/card_one_mr"
                android:layout_width="0dp"
                android:layout_margin="5dp"
                android:layout_height="220dp"
                android:layout_weight=".5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:background="@drawable/medicalreport"
                            android:layout_width="match_parent"
                            android:layout_height="160dp" />

                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/img_one_okay_tick"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/okaytick" />
                    </FrameLayout>


                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:layout_marginBottom="10dp"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:background="@color/colorAccent"
                        android:text="Blood Report by Dr. AK Singhal" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/card_two_mr"
                android:layout_width="0dp"
                android:layout_margin="5dp"
                android:layout_height="220dp"
                android:layout_weight=".5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:background="@drawable/medicalreport"
                            android:layout_width="match_parent"
                            android:layout_height="160dp" />

                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/img_two_okay_tick"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/okaytick" />
                    </FrameLayout>

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:background="@color/colorAccent"
                        android:text="Blood Report by Dr. AK Singhal"></TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">


            <androidx.cardview.widget.CardView
                android:id="@+id/card_three_mr"
                android:layout_width="0dp"
                android:layout_margin="5dp"
                android:layout_height="220dp"
                android:layout_weight=".5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:background="@drawable/medicalreport"
                            android:layout_width="match_parent"
                            android:layout_height="160dp" />

                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/img_three_okay_tick"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/okaytick" />
                    </FrameLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:background="@color/colorAccent"
                        android:text="Blood Report by Dr. AK Singhal" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/card_four_mr"
                android:layout_width="0dp"
                android:layout_margin="5dp"
                android:layout_height="220dp"
                android:layout_weight=".5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:background="@drawable/medicalreport"
                            android:layout_width="match_parent"
                            android:layout_height="160dp" />

                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/img_four_okay_tick"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/okaytick" />
                    </FrameLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:background="@color/colorAccent"
                        android:text="Blood Report by Dr. AK Singhal" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_continue_medical_report"
                android:layout_width="150dp"
                android:background="@color/colorAccent"
                android:text="Continue"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </LinearLayout>

    </LinearLayout>



</LinearLayout>