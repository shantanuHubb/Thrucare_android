<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <!--lln_provider_appoint_card id is temporary moved down to
    linear layout of patint info  -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="110dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:layout_weight=".2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:textColor="@color/black"
                        android:textSize="18sp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jul"
                        android:textSize="18sp"
                        android:textColor="@color/black" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:gravity="start"
                    android:id="@+id/lln_provider_appoint_card"
                    android:layout_marginTop="15dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".6">

                    <TextView
                        android:id="@+id/tv_patient_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="James One Patient"
                        android:textSize="15sp"
                        android:textColor="@color/black" />


                    <TextView
                        android:id="@+id/tv_age_patient"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Male(35 years)"
                        android:textSize="15sp"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_date_appointment_patient"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2.35PM, Friday"
                        android:textSize="13sp" />


                    <TextView
                        android:id="@+id/tv_phone_number_patient"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+11111222222"
                        android:textSize="13sp" />
                </LinearLayout>



                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="10dp"
                    android:layout_height="30dp"
                    android:layout_weight=".2">

                    <TextView
                        android:id="@+id/tv_status_appointment"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:background="@drawable/active_text_shape"
                        android:gravity="center"
                        android:layout_marginStart="10dp"
                        android:text="Pending" />
                </LinearLayout>




            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>


</LinearLayout>